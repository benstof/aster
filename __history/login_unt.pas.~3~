unit login_unt;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.Buttons, emitter_mng_unt, admin_unt;

type
  Tlogin_form = class(TForm)
    input_password: TEdit;
    Label1: TLabel;
    Label3: TLabel;
    BitBtn1: TBitBtn;
    procedure BitBtn1Click(Sender: TObject);
    procedure FormActivate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
    forwhat : integer;
  end;

var
  login_form: Tlogin_form;


implementation

{$R *.dfm}

procedure Tlogin_form.BitBtn1Click(Sender: TObject);
var password : string;
begin

   if forwhat = 0 then
   begin
      if input_password.Text = 'admin' then
      begin
         admin_form.Show;
         self.Hide;
         exit;
      end;
   end;

   if forwhat = 1 then
   begin

   AssignFile(settings_file, 'settings.set');
   // Reopen the file in read only mode
   FileMode := fmOpenRead;
   Reset(settings_file);
   // Display the file contents
   while not Eof(settings_file) do
   begin
     Read(settings_file, settings);
   end;
   // Close the file for the last time
   CloseFile(settings_file);

      if (input_password.Text = settings.password) then
      begin
         settings.logged_in := true;
         emitter_mng.show;
         self.Hide;
         exit;
      end;
   end;
end;

procedure Tlogin_form.FormActivate(Sender: TObject);
begin
  input_password.Text := '';
end;

end.
